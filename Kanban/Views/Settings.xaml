<UserControl x:Class="Kanban.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:prism="http://prismlibrary.com/"   
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <StackPanel Margin="20">
    <StackPanel>
      <Label HorizontalAlignment="Left">Database</Label>
      <DockPanel>
        <Button DockPanel.Dock="Right" Margin="5,0">Browse</Button>
        <TextBox Controls:TextBoxHelper.Watermark="Database Path" ></TextBox>
      </DockPanel>
      <Line Width="100" HorizontalAlignment="Center" Fill="Red"></Line>
    </StackPanel>
  </StackPanel>
</UserControl>
